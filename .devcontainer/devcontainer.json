{
  "name": "ML Platform Dev Container",
  "dockerComposeFile": "docker-compose.yml",
  "service": "devcontainer",
  // Services to start with the devcontainer
  "runServices": [
  "devcontainer",
  "ray-head",
  "ray-worker",
  "minio",
  "minio-init",
  "prometheus",
  "grafana"
  ],
  // Where the workspace lives inside the devcontainer
  "workspaceFolder": "/workspace",
  // Devcontainer features
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "upgradePackages": true
    },
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
    "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {
      "version": "latest",
      "helm": "latest"
    },
    "ghcr.io/devcontainers/features/terraform:1": {
      "version": "1.5.0"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.10"
    }
  },
  // VS Code environment inside the container
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/workspace/.venv/bin/python",
        "terminal.integrated.defaultProfile.linux": "zsh",
        "[terraform]": {
          "editor.defaultFormatter": "hashicorp.terraform",
          "editor.formatOnSave": true
        },
        "[python]": {
          "editor.formatOnSave": true
        }
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "hashicorp.terraform",
        "ms-kubernetes-tools.vscode-kubernetes-tools",
        "ms-azuretools.vscode-docker",
        "GitHub.copilot",
        "redhat.vscode-yaml"
      ]
    }
  },
  // After the container is built for the first time
  "postCreateCommand": "uv sync --extra dev",

  // Fix docker-outside-of-docker permissions
  "postStartCommand": "sudo sh -c 'chown root:docker /var/run/docker.sock && chmod g+rw /var/run/docker.sock' 2>/dev/null || true",

  // Use the vscode user configured in the Dockerfile
  "remoteUser": "vscode"
}
